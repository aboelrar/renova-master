<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/searchitem"
    android:gravity="right"
    android:weightSum="3"
    android:layout_height="@dimen/_240sdp">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="right"
        android:layout_height="0dp">
        <ImageView
            android:layout_weight=".15"
            android:layout_width="0dp"
            android:src="@drawable/deletebutton"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/fav"
            android:layout_gravity="center"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:weightSum="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="bottom"
                android:text="دكتور محمد مصطفى حمادى"
                android:paddingRight="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:id="@+id/doctorName"
                android:textColor="@android:color/white"
                android:layout_weight=".6"/>

            <RatingBar
                android:layout_weight=".2"
                android:id="@+id/ratings"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="@dimen/_80sdp"
                android:isIndicator="true"
                android:focusable="false"
                android:clickable="false"
                android:layout_height="0dp"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:progressTint="@color/yellow"
                android:progressBackgroundTint="#000000"
                android:secondaryProgressTint="#000000"
                android:numStars="5"
                android:paddingLeft="@dimen/_17sdp"
                android:rating="5" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/_55sdp"
            android:padding="@dimen/_2sdp"
            android:layout_weight=".18"
            android:id="@+id/prfileImage"
            android:layout_gravity="center_vertical"
            android:background="@drawable/doctorbackground"
            android:src="@drawable/dictor"
            />

        <LinearLayout
            android:layout_weight=".05"
            android:layout_width="0dp"
            android:layout_height="match_parent"></LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="3.2"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight=".8"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="right"
            android:layout_height="0dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="جراحه عيون"
                android:id="@+id/speclist"
                android:textColor="@android:color/white"
                android:gravity="center_vertical"
                android:textSize="@dimen/_13ssp"
                android:layout_weight=".8"/>
            <ImageView
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:src="@drawable/doctorh"
                android:layout_gravity="center"
                android:layout_height="@dimen/_20sdp" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight=".8"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_height="0dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight=".8"
                android:id="@+id/fees"
                android:gravity="center_vertical"
                android:text=" 100 جنيه "
                android:textColor="@android:color/white"
                android:textSize="@dimen/_13ssp" />
            <ImageView

                android:layout_weight=".2"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:src="@drawable/fees"
                android:layout_height="@dimen/_20sdp" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight=".8"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="right"
            android:layout_height="0dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="الرياض ,المملكه العربيه السعوديه "
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:id="@+id/locaation"
                android:gravity="center_vertical"
                android:textSize="@dimen/_13ssp"
                android:layout_weight=".8"/>
            <ImageView
                android:layout_weight=".2"
                android:layout_width="0dp"
                app:srcCompat="@drawable/ic_location_on_black_24dp"
                android:layout_gravity="center"
                android:layout_height="@dimen/_20sdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight=".8"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="right"
            android:layout_height="0dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1/1/2018,من الساعه 5 حتى 8"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:id="@+id/time"
                android:gravity="center_vertical"
                android:textSize="@dimen/_13ssp"
                android:layout_weight=".8"/>
            <ImageView
                android:layout_weight=".2"
                android:layout_width="0dp"
                app:srcCompat="@drawable/ic_access_time_black_24dp"
                android:layout_gravity="center"
                android:layout_height="@dimen/_20sdp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight=".1"
        android:layout_width="match_parent"
        android:layout_height="0dp"></LinearLayout>
    <Button
        android:layout_weight=".45"
        android:text="الصفحه الشخصيه"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:id="@+id/profile"
        android:textColor="@android:color/white"
        android:background="@drawable/buttonback"
        android:layout_gravity="center"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="0dp" />
    <LinearLayout
        android:layout_weight=".22"
        android:layout_width="match_parent"
        android:layout_height="0dp"></LinearLayout>
    <ImageView
        android:layout_weight=".03"
        android:layout_width="match_parent"
        android:src="@drawable/line"
        android:background="@android:color/white"
        android:layout_height="0dp" />

</LinearLayout>